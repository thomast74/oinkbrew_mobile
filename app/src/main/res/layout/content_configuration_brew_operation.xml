                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center"
                        android:text="65.0 ºC"
                        android:textSize="24sp"
                        android:textColor="@color/black"
                        />
                </LinearLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

