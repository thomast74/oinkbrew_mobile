<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/material_orange_500"
        >
        <Button
            android:id="@+id/cancel"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:background="?android:attr/selectableItemBackground"
            android:text="X"
            android:textColor="@color/white"
            />
        <Button
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:background="?android:attr/selectableItemBackground"
            android:text="Save"
            android:textColor="@color/white"
            />
    </RelativeLayout>

    <EditText
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Name"
        android:textColor="@color/white"
        android:textCursorDrawable="@null"
        android:background="@color/material_orange_500"
        android:paddingLeft="12dp"
        android:enabled="true"
        android:inputType="text|textCapSentences|textAutoCorrect"
        android:textColorHint="@color/white"
        android:textColorHighlight="@color/material_blue_grey_900"
        android:textSelectHandle="@color/material_blue_grey_900"
        />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/lbl_type"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:gravity="left|center_vertical"
                    android:text="Type"
                    android:textSize="16sp"
                    />

                <Spinner
                    android:id="@+id/type"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:spinnerMode="dropdown"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_400"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <TextView
                    android:id="@+id/lbl_brewpi"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingLeft="12dp"
                    android:gravity="left|center_vertical"
                    android:text="BrewPi"
                    android:textSize="16sp"
                    />

                <Spinner
                    android:id="@+id/brewpi"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:spinnerMode="dropdown"
                    />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_400"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/lbl_actuators"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:paddingLeft="12dp"
                    android:gravity="left|top"
                    android:text="Actuators"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:id="@+id/cooling_actuator_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/lbl_cooling_actuator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Cooling"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/cooling_actuator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/heating_1_actuator_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/lbl_heating_1_actuator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Heating"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/heating_1_actuator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/heating_2_actuator_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/lbl_heating_2_actuator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Heating"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/heating_2_actuator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fan_actuator_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/lbl_fan_actuator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Fan"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/fan_actuator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pump_1_actuator_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/lbl_pump_1_actuator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Pump 1"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/pump_1_actuator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/pump_2_actuator_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    >
                    <TextView
                        android:id="@+id/lbl_pump_2_actuator"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Pump 2"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/pump_2_actuator"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/md_grey_400"
                />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:id="@+id/lbl_sensors"
                    android:layout_width="match_parent"
                    android:layout_height="32dp"
                    android:layout_weight="1"
                    android:paddingTop="12dp"
                    android:paddingLeft="12dp"
                    android:gravity="left|top"
                    android:text="Sensors"
                    android:textSize="16sp"
                    />
                <LinearLayout
                    android:id="@+id/fridge_inside_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_fridge_inside_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Fridge Inside"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/fridge_inside_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/fridge_outside_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_fridge_outside_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Fridge Outside"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/fridge_outside_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/beer_1_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_beer_1_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Beer 1"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/beer_1_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/beer_2_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_beer_2_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Beer 2"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/beer_2_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/hlt_out_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_hlt_out_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="HLT Out"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/hlt_out_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mash_in_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_mash_in_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Mash In"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/mash_in_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <LinearLayout
                    android:id="@+id/mash_out_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_mash_out_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Mash Out"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/mash_out_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                <!--
                <LinearLayout
                    android:id="@+id/boil_inside_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_boil_inside_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Boil Inside"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/boil_inside_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
                -->
                <LinearLayout
                    android:id="@+id/boil_out_sensor_parent"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:paddingLeft="12dp"
                    android:layout_weight="1">
                    <TextView
                        android:id="@+id/lbl_boil_out_sensor"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:paddingLeft="14dp"
                        android:gravity="left|center_vertical"
                        android:text="Boil Out"
                        android:textSize="14sp"
                        />
                    <Spinner
                        android:id="@+id/boil_out_sensor"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:spinnerMode="dropdown"
                        />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/md_grey_400"
                />

        </LinearLayout>
    </ScrollView>
</LinearLayout>