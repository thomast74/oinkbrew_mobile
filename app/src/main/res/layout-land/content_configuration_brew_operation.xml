<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:weightSum="12"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="?attr/actionBarSize"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="@color/md_blue_grey_50"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_configuration_brew_operation"
    >

    <android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/configuration_chart_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="11"
        android:layout_margin="4dp"
        card_view:cardCornerRadius="2dp"
        card_view:cardElevation="2dp"
        card_view:cardUseCompatPadding="true"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp"
            >
            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:layout_marginRight="4dp"
        android:layout_marginLeft="0dp"
        android:orientation="vertical"
        android:visibility="invisible">
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/configuration_card_hlt"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            >
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/lbl_configuration_hlt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:background="@color/md_grey_300"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/configuration_hlt"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    >
                    <TextView
                        android:id="@+id/lbl_configuration_hlt_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:textSize="16sp"
                        android:text="@string/configuration_in"
                        />
                    <TextView
                        android:id="@+id/lbl_configuration_hlt_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_configuration_hlt_in"
                        android:layout_alignStart="@id/lbl_configuration_hlt_in"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:text="@string/configuration_out"
                        />
                    <TextView
                        android:id="@+id/configuration_hlt_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="16sp"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/configuration_hlt_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/configuration_hlt_in"
                        android:layout_alignParentRight="true"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:text="--.- ºC"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/configuration_card_mash"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            >
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/lbl_configuration_mash"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:background="@color/md_grey_300"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/configuration_mash"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    >
                    <TextView
                        android:id="@+id/lbl_configuration_mash_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:textSize="16sp"
                        android:text="@string/configuration_in"
                        />
                    <TextView
                        android:id="@+id/lbl_configuration_mash_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_configuration_mash_in"
                        android:layout_alignStart="@id/lbl_configuration_mash_in"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:text="@string/configuration_out"
                        />
                    <TextView
                        android:id="@+id/configuration_mash_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="16sp"
                        android:text="--.- ºC"
                        />
                    <TextView
                        android:id="@+id/configuration_mash_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/configuration_mash_in"
                        android:layout_alignParentRight="true"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:text="--.- ºC"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            android:id="@+id/configuration_card_boil"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="4dp"
            card_view:cardCornerRadius="2dp"
            card_view:cardElevation="2dp"
            card_view:cardUseCompatPadding="true"
            >
            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >
                <TextView
                    android:id="@+id/lbl_configuration_boil"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="16sp"
                    android:textColor="@color/black"
                    android:background="@color/md_grey_300"
                    android:paddingLeft="12dp"
                    android:paddingRight="12dp"
                    android:text="@string/configuration_boil"
                    />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="2"
                    android:gravity="center_vertical"
                    android:weightSum="1"
                    >
                    <TextView
                        android:id="@+id/lbl_configuration_boil_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:textSize="16sp"
                        android:text="@string/configuration_in"
                        />
                    <TextView
                        android:id="@+id/lbl_configuration_boil_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/lbl_configuration_boil_in"
                        android:layout_alignStart="@id/lbl_configuration_boil_in"
                        android:paddingTop="8dp"
                        android:paddingStart="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:text="@string/configuration_out"
                        />

                    <TextView
                        android:id="@+id/configuration_boil_in"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:textSize="16sp"
                        android:text=""
                        />
                    <TextView
                        android:id="@+id/configuration_boil_out"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/configuration_boil_in"
                        android:layout_alignParentRight="true"
                        android:paddingTop="8dp"
                        android:paddingEnd="8dp"
                        android:paddingBottom="8dp"
                        android:textSize="16sp"
                        android:text="--.- ºC"
                        />
                </RelativeLayout>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="2dp"
            android:layout_marginEnd="4dp"
            >
            <TextView
                android:id="@+id/lbl_configuration_water_pump"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:gravity="top|center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/configuration_water_pump"
                />
            <SeekBar
                android:id="@+id/configuration_water_pump_seekbar"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:max="100" />
            <TextView
                android:id="@+id/lbl_configuration_wort_pump"
                android:layout_width="match_parent"
                android:layout_height="28dp"
                android:gravity="top|center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/configuration_wort_pump"
                android:background="@color/white"
                android:layout_marginTop="8dp" />
            <SeekBar
                android:id="@+id/configuration_wort_pump_seekbar"
                android:layout_width="match_parent"
                android:layout_height="26dp"
                android:layout_gravity="top"
                android:max="100" />
        </LinearLayout>

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginStart="4dp"
            android:layout_marginRight="2dp"
            >
            <TextView
                android:id="@+id/lbl_configuration_target"
                android:layout_width="match_parent"
                android:layout_height="22dp"
                android:gravity="top|center_horizontal"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="@string/configuration_target"
                />
            <TextView
                android:id="@+id/configuration_target"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_horizontal"
                android:textSize="32sp"
                android:textColor="@color/black"
                android:paddingLeft="12dp"
                android:paddingRight="12dp"
                android:text="--.- ºC"
                />
        </LinearLayout>

    </LinearLayout>

</LinearLayout>